<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_animate"
            android:textColor="#FF00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hello World!"
            android:textSize="36sp"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:onClick="simpleAnimate"
            android:text="View Property Animate" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:onClick="objectProperty"
            android:text="Object Animator" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:onClick="objectReflection"
            android:text="Object Animator Reflection" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:onClick="propertyValueHolders"
            android:text="Property Value Holders" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:onClick="animationSet"
            android:text="Animator Set" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:onClick="valueAnimator"
            android:text="Value Animator" />
    </LinearLayout>

</LinearLayout>